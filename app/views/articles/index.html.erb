<div class="container">
<div class="row">
<% @articles.each do |article| %>
  <%= link_to article do %>
    <div class="col-md-4 margin-top-3per article-block">
    <% if article.image_id.present?%>
      <%= image_tag attachment_url(article, :image), class: 'img-responsive padding-top15 article-list-image' %>
      <% else %>
      <%= image_tag 'no-image.png', class: 'img-responsive padding-top15 article-list-image' %>
      <% end %>
        <div class="padding-bottom-15">
          <p class="title"><%= article.title %></p>
          <span>
            <%= article.created_at.strftime("%Y年%m月%d日") %>
          </span>
        </div>
      </div>
    <% end %>
  <% end %>
  </div>
  </div>
</div>